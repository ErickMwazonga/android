<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/imageViewIcon"
    android:layout_alignStart="@+id/imageViewIcon"
    android:layout_below="@+id/imageViewIcon"
    android:id="@+id/menu_icon_row"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/picture_rounded"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_alarm" />

    <TextView
        android:id="@+id/textViewIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>