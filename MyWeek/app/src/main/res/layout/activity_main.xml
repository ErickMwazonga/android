<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/root"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erickmwazonga.myweek.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND EMAIL"
        android:id="@+id/buttonSendEmail"
        android:onClick="OnClick"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonLaunchMarket"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAUNCH MAP"
        android:onClick="OnClick"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonViewMap"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonSendEmail"
        android:layout_alignEnd="@+id/buttonSendEmail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OnClick"
        android:text="LAUNCH MARKET"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonLaunchMarket"
        android:layout_below="@+id/buttonViewMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonViewMap"
        android:layout_alignEnd="@+id/buttonViewMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW CALCULATOR"
        android:onClick="OnClick"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonCalculator"
        android:layout_below="@+id/buttonSendEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
